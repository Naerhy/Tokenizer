{
	"plugins": ["prettier-plugin-solidity"],
	"overrides": [
		{
			"files": "*.sol",
			"options": {
				"parser": "solidity-parse"
			}
		}
	],
	"arrowParens": "always",
	"bracketSameLine": false,
	"bracketSpacing": true,
	"printWidth": 120,
	"semi": true,
	"singleQuote": false,
	"tabWidth": 4,
	"trailingComma": "none",
	"useTabs": true
}
